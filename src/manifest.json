{
  "name": "Impartial-KP",
  "description": "Kinopoisk rating hider",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "./assets/impartialkp16.png",
    "48": "./assets/impartialkp48.png",
    "128": "./assets/impartialkp128.png"
  },
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_popup": "./popup.html",
    "default_icon": {
      "16": "./assets/impartialkp16.png",
      "48": "./assets/impartialkp48.png",
      "128": "./assets/impartialkp128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.kinopoisk.ru/*"
      ],
      "js": [
        "./loader.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://*.kinopoisk.ru/*"
      ],
      "js": [
        "./content.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ]
}
